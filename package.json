{
  "name": "backend",
  "version": "1.0.0",
  "description": "Backend for Collections platform.",
  "main": "server.js",
  "scripts": {
    "start": "NODE_ENV=production node server.js",
    "server": "cross-env NODE_ENV=development nodemon server.js",
    "client": "npm start --prefix frontend",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "test": "cross-env NODE_ENV=test jest --verbose --runInBand",
    "heroku-postbuild": "cd frontend && npm install --only=dev && npm install && npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MichaelSedlack/Collections.git"
  },
  "author": "Group 6",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/MichaelSedlack/Collections/issues"
  },
  "homepage": "https://github.com/MichaelSedlack/Collections#readme",
  "devDependencies": {
    "concurrently": "^6.2.0",
    "cross-env": "^7.0.3",
    "jest": "^27.0.6",
    "nodemon": "^2.0.7",
    "supertest": "^6.1.3"
  },
  "dependencies": {
    "bcrypt": "^5.0.1",
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "express-async-errors": "^3.1.1",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.12.15",
    "nodemailer": "^6.6.2"
  }
}
